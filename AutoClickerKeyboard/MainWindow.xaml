<Window x:Class="AutoClickerKeyboard.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Auto Keyboard Clicker" Height="220" Width="350">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Text="Интервал (мс):" Margin="10"/>
        <TextBox x:Name="IntervalTextBox" Grid.Row="0" Margin="120,10,10,10" Width="100" Text="1000"/>

        <TextBlock Text="Клавиша:" Margin="10" Grid.Row="1"/>
        <TextBox x:Name="KeyTextBox" Grid.Row="1" Margin="120,10,10,10" Width="100" Text="Q"/>

        <TextBlock Text="Выберите процесс:" Margin="10" Grid.Row="2"/>
        <ComboBox x:Name="ProcessComboBox" Grid.Row="2" Margin="120,10,10,10" Width="150"/>

        <StackPanel Grid.Row="3" Orientation="Horizontal" HorizontalAlignment="Center" Margin="10">
            <Button x:Name="StartButton" Content="Запустить(CTRL+F1)" Width="150" Margin="5" Click="StartButton_Click"/>
            <Button x:Name="StopButton" Content="Остановить(CTRL+F2" Width="150" Margin="5" Click="StopButton_Click"/>
        </StackPanel>
    </Grid>
</Window>